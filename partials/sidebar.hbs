<div class="sidebar" role="aside" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <header class="header" role="banner">
        {{! The logo of the blog }}
        <a href="/"><img id="blog" class="logo" src="{{@blog.logo}}"></a>

        {{! The title of the blog }}
        <h1 class="title"><a href="/">{{@blog.title}}</a></h1>

        {{! The description of the blog }}
        <p class="description">{{@blog.description}}</p>

        {{! Small separator between user details and menu }}
        <div class="separator"></div>

        {{! Navigation menu }}
        {{> "nav"}}

        {{! Social links }}
        <div class="social-icons">
            <a href="https://github.com/cartove" class="icon icon-github-circled"></a>
            <a href="https://eg.linkedin.com/in/manegm" class="icon icon-linkedin"></a>
            <a href="https://plus.google.com/+MuhammadNegm" class="icon icon-gplus"></a>
            <a href="https://www.facebook.com/manegm" class="icon icon-facebook"></a>
            <a href="https://twitter.com/cartove" class="icon icon-twitter"></a>
            <a href="/rss" class="icon icon-rss"></a>
            <a href="mailto:alam.hor@gmail.com" class="icon icon-mail"></a>
        </div>
    </header>

    <footer class="site-footer">
        <section class="copyright">{{> "copyright"}}</section>
    </footer>
</div>
